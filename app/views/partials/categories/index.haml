.wrap.results.block.half
  .grid.menu.xs-hide
    = link_to '/', class: 'first' do
      .unit.w-1-3 на главную
    .unit.w-1-3{'ng-click' => 'scroll_to_root()'}
      %h2
        %ng-pluralize{ count: "places.length", when: "placeForms"}
    / = link_to '/', class: 'last' do
    /   .unit.w-1-3 закладки

  .rooms{ 'ng-repeat' => 'place in places' }
    = link_to '/{{category}}/{{place.id}}' do
      .grid
        .unit.w-5-6
          .rooms_count
            {{place.address}}
          .address.link
            {{place.title}}
        .unit.w-1-6
          / .big_icon.favorite{ title: 'добавить в закладки'}